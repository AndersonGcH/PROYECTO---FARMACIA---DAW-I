<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Notificaciones"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- ================= PARAMETROS ================= -->
    <parameter name="Title" class="java.lang.String">
        <defaultValueExpression><![CDATA["REPORTE DE NOTIFICACIONES"]]></defaultValueExpression>
    </parameter>

    <!-- ================= CAMPOS ================= -->
    <field name="idNotificacion" class="java.lang.Integer"/>
    <field name="mensaje" class="java.lang.String"/>
    <field name="fecha" class="java.time.LocalDateTime"/>
    <field name="estado" class="java.lang.String"/>
    <field name="nombreMedicamento" class="java.lang.String"/>
    <field name="nombreSede" class="java.lang.String"/>

    <!-- ================= TITULO ================= -->
    <title>
        <band height="90">

            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE NOTIFICACIONES]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="45" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Control de Inventario y Caducidad de Medicamentos]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="75" width="555" height="1"/>
            </line>

        </band>
    </title>

    <!-- ================= ENCABEZADO DE TABLA ================= -->
    <columnHeader>
        <band height="30">

            <staticText>
                <reportElement x="0" y="0" width="60" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="60" y="0" width="160" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[MENSAJE]]></text>
            </staticText>

            <staticText>
                <reportElement x="220" y="0" width="95" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[FECHA]]></text>
            </staticText>

            <staticText>
                <reportElement x="315" y="0" width="80" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[ESTADO]]></text>
            </staticText>

            <staticText>
                <reportElement x="395" y="0" width="90" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[MEDICAMENTO]]></text>
            </staticText>

            <staticText>
                <reportElement x="485" y="0" width="70" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[SEDE]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETALLE ================= -->
    <detail>
        <band height="25">

            <textField>
                <reportElement x="0" y="0" width="60" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{idNotificacion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="60" y="0" width="160" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{mensaje}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="220" y="0" width="95" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{fecha}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="315" y="0" width="80" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{estado}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="395" y="0" width="90" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{nombreMedicamento}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="485" y="0" width="70" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{nombreSede}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PIE DE PAGINA ================= -->
    <pageFooter>
        <band height="25">

            <staticText>
                <reportElement x="0" y="5" width="200" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Usuario: GESTOR]]></text>
            </staticText>

            <textField>
                <reportElement x="200" y="5" width="155" height="15"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["PÃ¡gina " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="355" y="5" width="200" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Fecha: " + new java.text.SimpleDateFormat("dd/MM/yyyy")
                    .format(new java.util.Date())
                ]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

</jasperReport>