<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="StockPorMedicamento"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- ================= PARAMETRO ================= -->
    <parameter name="Title" class="java.lang.String">
        <defaultValueExpression><![CDATA["REPORTE DE STOCK POR MEDICAMENTO"]]></defaultValueExpression>
    </parameter>

    <!-- ================= CAMPOS ================= -->
    <field name="idMedicamento" class="java.lang.Integer"/>
    <field name="nombre" class="java.lang.String"/>
    <field name="nombreSede" class="java.lang.String"/>
    <field name="stockTotal" class="java.lang.Integer"/>

    <!-- ================= TITULO ================= -->
    <title>
        <band height="90">

            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE STOCK POR MEDICAMENTO]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="45" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Control de disponibilidad de medicamentos por sede]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="75" width="555" height="1"/>
            </line>

        </band>
    </title>

    <!-- ================= ENCABEZADO DE TABLA ================= -->
    <columnHeader>
        <band height="30">

            <staticText>
                <reportElement x="0" y="0" width="90" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[ID MED]]></text>
            </staticText>

            <staticText>
                <reportElement x="90" y="0" width="210" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[MEDICAMENTO]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="0" width="135" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[SEDE]]></text>
            </staticText>

            <staticText>
                <reportElement x="435" y="0" width="120" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[STOCK TOTAL]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETALLE ================= -->
    <detail>
        <band height="25">

            <textField>
                <reportElement x="0" y="0" width="90" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{idMedicamento}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="90" y="0" width="210" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{nombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="0" width="135" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{nombreSede}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="435" y="0" width="120" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{stockTotal}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PIE DE PAGINA ================= -->
    <pageFooter>
        <band height="25">

            <staticText>
                <reportElement x="0" y="5" width="200" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Usuario: GESTOR]]></text>
            </staticText>

            <textField>
                <reportElement x="200" y="5" width="155" height="15"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["PÃ¡gina " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="355" y="5" width="200" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Fecha: " + new java.text.SimpleDateFormat("dd/MM/yyyy")
                    .format(new java.util.Date())
                ]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

</jasperReport>