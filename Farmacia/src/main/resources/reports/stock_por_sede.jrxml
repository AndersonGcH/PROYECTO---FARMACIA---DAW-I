<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="StockPorSede"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- ================= PARAMETROS ================= -->
    <parameter name="Title" class="java.lang.String"/>

    <!-- ================= CAMPOS ================= -->
    <field name="idSede" class="java.lang.Integer"/>
    <field name="nombre" class="java.lang.String"/>
    <field name="stockTotal" class="java.lang.Integer"/>

    <!-- ================= TITULO ================= -->
    <title>
        <band height="100">

            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE STOCK POR SEDE]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="45" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Plataforma de Control de Inventario de Medicamentos]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="80" width="555" height="1"/>
            </line>

        </band>
    </title>

    <!-- ================= ENCABEZADO DE TABLA ================= -->
    <columnHeader>
        <band height="30">

            <staticText>
                <reportElement x="0" y="0" width="100" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[ID SEDE]]></text>
            </staticText>

            <staticText>
                <reportElement x="100" y="0" width="255" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[NOMBRE DE SEDE]]></text>
            </staticText>

            <staticText>
                <reportElement x="355" y="0" width="200" height="30"
                               backcolor="#E6E6E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[STOCK TOTAL]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETALLE ================= -->
    <detail>
        <band height="25">

            <textField>
                <reportElement x="0" y="0" width="100" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{idSede}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="100" y="0" width="255" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{nombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="355" y="0" width="200" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{stockTotal}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PIE DE PAGINA ================= -->
    <pageFooter>
        <band height="25">

            <staticText>
                <reportElement x="0" y="5" width="300" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Documento generado automáticamente por el sistema]]></text>
            </staticText>

            <textField>
                <reportElement x="355" y="5" width="200" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

</jasperReport>